<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FirstMAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"
                Source="scholarship_icon.png" />

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="ScholarMatch" />

            <Label
                SemanticProperties.Description="Tìm học bổng du học phù hợp với bạn. Minh bạch, đáng tin cậy, dễ dàng."
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Tìm học bổng du học phù hợp với bạn. Minh bạch, đáng tin cậy, dễ dàng." />

            <Button
                x:Name="StartBtn"
                BackgroundColor="MidnightBlue"
                Clicked="NavigateToLoginClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Bắt đầu"
                Text="Bắt đầu" />

            <Button
                x:Name="GetScholarshipBtn"
                BackgroundColor="MidnightBlue"
                Clicked="NavigateToScholarshipClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Xem học bổng ngay"
                Text="Xem học bổng ngay" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
