<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FirstMAUI.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:FirstMAUI.Components"
    Title="LoginPage">
    <VerticalStackLayout>
        <Image
            Aspect="AspectFit"
            HeightRequest="185"
            SemanticProperties.Description="dot net bot in a hovercraft number nine"
            Source="scholarship_icon.png" />

        <Label
            HorizontalOptions="Center"
            Style="{StaticResource Headline}"
            Text="Chào mừng trở lại"
            VerticalOptions="Center" />

        <Label
            SemanticProperties.Description="Đăng nhập để tiếp tục săn họ bổng"
            SemanticProperties.HeadingLevel="Level2"
            Style="{StaticResource SubHeadline}"
            Text="Đăng nhập để tiếp tục săn họ bổng" />
        <!--  social buttons  -->
        <components:SocialLoginButton />

        <components:SubHeader Text="hoặc" />

        <Button
            x:Name="GetScholarshipBtn"
            BackgroundColor="MidnightBlue"
            Clicked="LoginByEmailClicked"
            HorizontalOptions="Fill"
            SemanticProperties.Hint="Đăng nhập với Email"
            Text="Đăng nhập với Email" />

        <HorizontalStackLayout>
            <components:SubHeader Text="Chưa có tài khoản?" />
            <components:UnderlineSubHeader Text=" Đăng ký ngay" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>